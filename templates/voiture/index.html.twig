{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    {%  if is_granted('ROLE_ADMIN') %}
        <h1>Voiture index</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Model</th>
                    <th>Marque</th>
                    <th>Composant</th>
                    <th>Price</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for voiture in voitures %}
                <tr>
                    <td>{{ voiture.id }}</td>
                    <td>{{ voiture.model }}</td>
                    <td>{{ voiture.marque.name }}</td>
                    <td>
                        <ul>
                            {% for composant in voiture.composant %}
                                <li>
                                    {{ composant.name }}
                                </li>
                            {% endfor %}
                        </ul>
                    </td>
                    <td>{{ voiture.price }}</td>
                    <td>
                        <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}">show</a>
                        <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
                        <a href="{{ path('app_voiture_archive', {'id': voiture.id}) }}">archive</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_voiture_new') }}">Create new</a>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a href="{{ path('app_voiture_archive_list') }}">Voir les voitures archiv√©es</a>
        {% endif %}
    {% endif %}
{% endblock %}
